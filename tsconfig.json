{
    "compileOnSave": false,
    "compilerOptions": {
      "target": "es6",                         
      "module": "commonjs",                   
      "sourceMap": true,                     
      "outDir": "dist",                                                 
      "moduleResolution": "node",           
      "typeRoots": ["node_modules/@types"],         
      "esModuleInterop": true,                 
      "experimentalDecorators": true,       
      "emitDecoratorMetadata": true       
    },
    "include": [
      "typings.d.ts",
      "server/**/*.ts"
    ],
    "exclude": ["node_modules"] 
  }
  
{
    "openapi": "3.0.0",
    "info": {
        "version": "1.0.0",
        "title": "Reclamos API",
        "description": "API de reclamos",
        "license": {
            "name": "MIT",
            "url": "https://opensource.org/licenses/MIT"
        }
    },
    "servers": [
        {
            "url": "/reclamo",
            "description": "Localhost"
        },
        {
            "url": "https://integracion-aplicaciones.herokuapp.com/reclamo",
            "description": "Heroku cloud"
        }
    ],
    "tags": [
        {
            "name": "Reclamos",
            "description": "API de reclamos"
        }
    ],
    "consumes": [
        "application/json"
    ],
    "produces": [
        "application/json"
    ],
    "paths": {
        "/": {
            "get": {
                "tags": [
                    "Reclamos"
                ],
                "summary": "Obtener todos los reclamos del sistema",
                "responses": {
                    "200": {
                        "description": "OK",
                        "schema": {
                            "$ref": "#/definitions/Reclamo"
                        }
                    },
                    "404": {
                        "description": "No se encontro el reclamo especificado",
                    },
                    "500": {
                        "description": "Hubo un error en la recuperacion del reclamo."
                    }

                }
            },
            "post": {
                "tags": [
                    "Reclamos"
                ],
                "summary": "Crea un nuevo reclamo",
                "requestBody": {
                    "description": "Reclamo Object",
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "$ref": "#/definitions/ReclamoSave"
                            }
                        }
                    }
                },
                "produces": [
                    "application/json"
                ],
                "responses": {
                    "200": {
                        "description": "OK",
                        "schema": {
                            "$ref": "#/definitions/id"
                        }
                    },
                    "500": {
                        "description": "El usuario no existe, faltan datos o hubo un error mientras se guardaba el reclamo"
                    }
                }
            }
        },
        "/{id}": {
            "parameters": [
                {
                    "name": "id",
                    "in": "path",
                    "required": true,
                    "description": "ID del reclamo que queremos encontrar",
                    "type": "string"
                }
            ],
            "get": {
                "tags": [
                    "Reclamos"
                ],
                "summary": "Get reclamo with given ID",
                "parameters": [
                    {
                        "in": "path",
                        "name": "id",
                        "required": true,
                        "description": "Reclamo with id",
                        "schema": {
                            "$ref": "#/definitions/id"
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "OK",
                        "schema": {
                            "$ref": "#/definitions/Reclamo"
                        }
                    },
                    "404": {
                        "description": "Failed. Reclamo not found."
                    }
                }
            },
            "put": {
                "summary": "Update reclamo with given ID",
                "tags": [
                    "Reclamos"
                ],
                "requestBody": {
                    "description": "Reclamo Object",
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "$ref": "#/definitions/ReclamoUpdate"
                            }
                        }
                    }
                },
                "parameters": [
                    {
                        "in": "path",
                        "name": "id",
                        "required": true,
                        "description": "Reclamo with new values of properties",
                        "schema": {
                            "$ref": "#/definitions/id"
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "OK",
                        "schema": {
                            "$ref": "#/definitions/Reclamo"
                        }
                    },
                    "400": {
                        "description": "Failed. Bad post data."
                    },
                    "404": {
                        "description": "Failed. Reclamo not found."
                    }
                }
            },
            "delete": {
                "summary": "Delete reclamo with given ID",
                "tags": [
                    "Reclamos"
                ],
                "parameters": [
                    {
                        "in": "path",
                        "name": "id",
                        "required": true,
                        "description": "Delete Reclamo with id",
                        "schema": {
                            "$ref": "#/definitions/id"
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "OK",
                        "schema": {
                            "$ref": "#/definitions/Reclamo"
                        }
                    },
                    "400": {
                        "description": "Failed. Bad post data."
                    },
                    "404": {
                        "description": "Failed. Reclamo not found."
                    }
                }
            }
        }
    },
    "definitions": {
        "id": {
            "properties": {
                "uuid": {
                    "type": "string"
                }
            }
        },
        "Reclamo": {
            "type": "object",
            "properties": {
                "fecha": {
                    "type": "string",
                    "format": "date-time"
                },
                "usuario": {
                    "$ref": "#/definitions/Usuario"
                },
                "descripcion": {
                    "type": "string"
                },
                "nroOrden": {
                    "type": "number"
                },
                "fuente": {
                    "type": "string"
                },
                "estado": {
                    "$ref": "#/definitions/EstadoReclamo"
                }
            }
        },
        "ReclamoSave": {
            "type": "object",
            "properties": {
                "email": {
                    "type": "string"
                },
                "descripcion": {
                    "type": "string"
                },
                "nroOrden": {
                    "type": "number"
                }
            }
        },
        "ReclamoUpdate": {
            "type": "object",
            "properties": {
                "descripcion": {
                    "type": "string"
                },
                "estado": {
                    "$ref": "#/definitions/EstadoReclamo"
                }
            }
        },
        "EstadoReclamo": {
            "type": "object",
            "properties": {
                "id":{
                    "type" : "number"
                },
                "descripcion": {
                    "type": "string"
                }
            }
        },
        "Usuario": {
            "type": "object",
            "properties": {
                "nombre": {
                    "type": "string"
                },
                "email": {
                    "type": "string"
                },
                "telefono": {
                    "type": "string"
                },
                "direccion": {
                    "type": "string"
                },
                "rol": {
                    "type": "string"
                }
            }
        }
    }
}
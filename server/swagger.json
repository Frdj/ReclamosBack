{
    "openapi": "3.0.0",
    "info": {
        "version": "1.0.0",
        "title": "Reclamos API",
        "description": "API de reclamos",
        "license": {
            "name": "UADE",
            "url": "https://uade.edu.ar"
        }
    },
    "servers": [
        {
            "url": "/reclamo",
            "description": "Localhost"
        },
        {
            "url": "https://integracion-aplicaciones.herokuapp.com/reclamo",
            "description": "Heroku cloud"
        }
    ],
    "tags": [
        {
            "name": "Reclamos",
            "description": "API de reclamos"
        }
    ],
    "consumes": [
        "application/json"
    ],
    "produces": [
        "application/json"
    ],
    "paths": {
        "/": {
            "get": {
                "tags": [
                    "Reclamos"
                ],
                "summary": "Obtener todos los reclamos del sistema",
                "responses": {
                    "200": {
                        "description": "OK",
                        "content": {
                            "application/json": {
                              "schema": {
                                "type": "array",
                                "items": {
                                    "$ref": "#/definitions/Reclamo"
                                }
                              }
                            }
                          }
                    },
                    "404": {
                        "description": "No se encontro el reclamo especificado"
                    },
                    "500": {
                        "description": "Hubo un error en la recuperacion del reclamo."
                    }

                }
            },
            "post": {
                "tags": [
                    "Reclamos"
                ],
                "summary": "Crear reclamo",
                "requestBody": {
                    "description": "Objeto Reclamo",
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "$ref": "#/definitions/ReclamoSave"
                            }
                        }
                    }
                },
                "produces": [
                    "application/json"
                ],
                "responses": {
                    "200": {
                        "description": "OK",
                        "schema": {
                            "$ref": "#/definitions/id"
                        }
                    },
                    "500": {
                        "description": "El usuario no existe, faltan datos o hubo un error mientras se guardaba el reclamo"
                    }
                }
            }
        },
        "/{id}": {
            "parameters": [
                {
                    "name": "id",
                    "in": "path",
                    "required": true,
                    "description": "ID del reclamo a buscar",
                    "type": "string"
                }
            ],
            "get": {
                "tags": [
                    "Reclamos"
                ],
                "summary": "Obtener reclamo por ID",
                "parameters": [
                    {
                        "in": "path",
                        "name": "id",
                        "required": true,
                        "description": "Reclamo ID",
                        "schema": {
                            "$ref": "#/definitions/id"
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "OK",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/definitions/Reclamo"
                                }
                            }
                          }
                    },
                    "404": {
                        "description": "Error. Reclamo no encontrado."
                    }
                }
            },
            "put": {
                "summary": "Actualizar reclamo por ID",
                "tags": [
                    "Reclamos"
                ],
                "requestBody": {
                    "description": "Objeto Reclamo",
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "$ref": "#/definitions/ReclamoUpdate"
                            }
                        }
                    }
                },
                "parameters": [
                    {
                        "in": "path",
                        "name": "id",
                        "required": true,
                        "description": "Reclamo con datos actualizados",
                        "schema": {
                            "$ref": "#/definitions/id"
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "OK"
                    },
                    "400": {
                        "description": "Error. Datos incorrectos."
                    },
                    "404": {
                        "description": "Error. Reclamo no encontrado."
                    }
                }
            },
            "delete": {
                "summary": "Borrar reclamo por ID",
                "tags": [
                    "Reclamos"
                ],
                "parameters": [
                    {
                        "in": "path",
                        "name": "id",
                        "required": true,
                        "description": "ID de reclamo a borrar",
                        "schema": {
                            "$ref": "#/definitions/id"
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "OK",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/definitions/Reclamo"
                                }
                            }
                        }
                    },
                    "400": {
                        "description": "Error. Datos incorrectos."
                    },
                    "404": {
                        "description": "Error. Reclamo no encontrado."
                    }
                }
            },
            "/setCron": {
                "summary": "Setea tiempo de sincronizaci√≥n de CSV",
                "tags": [
                    "Otros"
                ],
                "parameters": [
                    {
                        "in": "body",
                        "name": "time",
                        "required": true,
                        "description": "Tiempo a setear. 'ya' para ejecutar en el momento, sino es '* /1 * * * * *'",
                        "schema": {
                            "$ref": "#/definitions/time"
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "OK"
                    }
                }
            }
        }
    },
    "definitions": {
        "id": {
            "properties": {
                "uuid": {
                    "type": "string"
                }
            }
        },
        "time": {
            "properties": {
                "uuid": {
                    "type": "string"
                }
            }
        },
        "Reclamo": {
            "type": "object",
            "properties": {
                "fecha": {
                    "type": "string",
                    "format": "date-time"
                },
                "usuario": {
                    "$ref": "#/definitions/Usuario"
                },
                "descripcion": {
                    "type": "string"
                },
                "nroOrden": {
                    "type": "number"
                },
                "fuente": {
                    "type": "string"
                },
                "estado": {
                    "$ref": "#/definitions/EstadoReclamo"
                }
            }
        },
        "ReclamoSave": {
            "type": "object",
            "properties": {
                "email": {
                    "type": "string"
                },
                "calle": {
                    "type": "string"
                },
                "codPostal": {
                    "type": "string"
                },
                "ciudad": {
                    "type": "string"
                },
                "provincia": {
                    "type": "string"
                },
                "descripcion": {
                    "type": "string"
                },
                "nroOrden": {
                    "type": "number"
                }
            }
        },
        "ReclamoUpdate": {
            "type": "object",
            "properties": {
                "descripcion": {
                    "type": "string"
                },
                "estado": {
                    "$ref": "#/definitions/EstadoReclamo"
                }
            }
        },
        "EstadoReclamo": {
            "type": "object",
            "properties": {
                "id":{
                    "type" : "number"
                },
                "descripcion": {
                    "type": "string"
                }
            }
        },
        "Usuario": {
            "type": "object",
            "properties": {
                "nombre": {
                    "type": "string"
                },
                "email": {
                    "type": "string"
                },
                "telefono": {
                    "type": "string"
                },
                "direccion": {
                    "type": "string"
                },
                "rol": {
                    "type": "string"
                }
            }
        }
    }
}